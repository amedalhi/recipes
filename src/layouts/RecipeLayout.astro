---
//css
import "@styles/global.css";

//components
import Head from "@components/Head.astro";
import Footer from "@components/Footer.astro";

//props
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <Head title={title} />
  <body class="container-full-layout">
    <slot />
    <Footer />
  </body>
</html>
